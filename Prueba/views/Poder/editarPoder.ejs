<div style='background-color:white;color:black;'>

  <h1>Editar Poderes</h1>
  <p>¡Edita el poder de tu héroe!</p>

  <div class="row">
    <div class="col-sm-8">
      <form action="Poder/editarPoder" method="post">
        <div class="form-group">
          <label>Nombre:</label>
          <input required type="text" class="form-control" placeholder="Ingrese el nuevo Nombre del Poder" name="nombre">
        </div>

        <div class="form-group">
          <label>Daño del Poder:</label>
          <input type="number" min="0" max="100" class="form-control" placeholder="Ingrese el daño causado por el poder" name="danio">
        </div>
    
        <div class="form-group">
            <label>Nivel:</label>
            <input type="number" min="0" max="10" class="form-control" placeholder="Ingrese un nivel" name="nivel">
        </div>

        <label for="">Heroe</label>

        <select class="form-control" name="idHeroe">
          <% for(var i=0; i<heroes.length; i++){ %>
            <option value='<%=heroes[i].id%>'>
              <%=heroes[i].nombre%>
            </option>
            <%  } %>
        </select>

        <input type="hidden" name="id" value="<%=poder.id%>">
        <button type="submit" class="btn btn-success">Crear Poder</button>

      </form>
    </div>
    <div class="col-sm-4">
      <h3 class="text-center"> ID: <%=poder.id%> -  <%=poder.nombre%></h3>
      <h4 class="text-center"> Poder: <%=poder.danio%></h4>
      <p class="text-center">
        <%= poder.nivel %>
      </p>
    </div>
  </div>

</div>